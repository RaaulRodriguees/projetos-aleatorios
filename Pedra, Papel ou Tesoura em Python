import random


escolha = int(input('''Escolha entre as seguintes opções: 
[1]Pedra
[2]Papel
[3]Tesoura
          
Coloque aqui sua opção: '''))


computador = random.randint(1, 3)

if computador == 1:
    print('Computador escolheu: Pedra\n')
    if escolha == 1:
        print('Empate')
    elif escolha == 2:
        print('Jogador venceu!')
    elif escolha == 3:
        print('Computador venceu!')

if computador == 2:
    print('Computador escolheu: Papel\n')
    if escolha == 1:
        print('Computador venceu!')
    elif escolha == 2:
        print('Empate!')
    elif escolha == 3:
        print('Jogador venceu!')

if computador == 3:
    print('Computador escolheu: Tesoura\n')
    if escolha == 1:
        print('Jogador venceu!')
    elif escolha == 2:
        print('Computador venceu!')
    elif escolha == 3:
        print('Empate!')
