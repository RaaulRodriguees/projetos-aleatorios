import random

perguntar = int(input('''Escolha uma opcao para se jogar: 

[1] Pedra
[2] Papel
[3] Tesoura
[4] Lagarto
[5] Spock

Digite sua escolha: '''))
computador = random.randint(1, 5)

if computador == 1:
    print('O computador escolheu: Pedra')
    if perguntar == 1:
        print("Empate!")
    elif perguntar == 2:
        print("Jogador venceu")
    elif perguntar == 3:
        print("Computador venceu")
    elif perguntar == 4:
        print("Computador venceu")
    elif perguntar == 5:
        print("Jogador venceu")
    else:
        print("Operacao invalida")

elif computador == 2:
    print('O computador escolheu: Papel')
